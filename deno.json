{
	"tasks": {
		"build:all": "deno task build:syntax & deno task build:compiler",
		"build:syntax": "deno run -A npm:bnf-parser ./source/bnf/",
		"build:compiler": "deno compile --output salient.exe -A ./source/cli.ts",
		"test:all": "deno test && deno task test:salient",
		"test:deno": "deno test",
		"test:salient": "deno run -A ./source/cli.ts test ./tests",
		"cli": "deno run -A ./source/cli.ts",
		"sa-test": "deno run -A ./source/cli.ts test",
		"compile": "deno run -A ./source/cli.ts compile"
	},
	"compilerOptions": {
		"strict": true,
		"strictNullChecks": true,
		"lib": ["ESNext", "DOM", "deno.ns"]
	},
	"imports": {
		"~/": "./source/",
		"bnf-parser": "npm:bnf-parser@^4.1.3",
		"fmt/colors": "https://deno.land/std@0.201.0/fmt/colors.ts"
	},
	"lint": {
		"include": ["source/"],
		"exclude": ["source/bnf/"],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"ignore-fmt": {
		"useTabs": true,
		"semiColons": true,
		"proseWrap": "preserve",
		"include": ["source/"],
		"exclude": ["source/bnf/"]
	},
	"lock": false,
	"test": {
		"include": ["tests/**"]
	}
}